<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/kayit"
    tools:context="com.tatlicilar.proje.Profil">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:layout_weight="8"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:background="#FF4500"
            android:text="Acil Durum "
            android:textColor="#FFFAF0"
            android:textAllCaps="false"
            android:layout_marginEnd="13dp"
            android:layout_above="@+id/ikon"
            android:layout_alignParentEnd="true"
            android:id="@+id/acilBtn"/>

        <ImageView
            android:layout_gravity="bottom"
            android:id="@+id/profilResmi"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profil"
            android:layout_marginLeft="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/resimdegistirBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="değiştir"
            android:background="#FF4500"
            android:textColor="#FFFAF0"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/profilResmi" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2.77"
        android:orientation="vertical"
        android:weightSum="7"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="0dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/arkadasBtn"
                android:layout_alignBottom="@+id/arkadasBtn"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="90dp"
                android:background="#00000000"
                android:text="Ayarlar"
                android:textAllCaps="false"
                android:textColor="#fffaf0"
                android:textSize="16dp"
                android:id="@+id/ayarlar"/>

            <Button
                android:id="@+id/arkadasBtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="200dp"
                android:background="#00000000"
                android:text="Arkadaşlar"
                android:textAllCaps="false"
                android:textColor="#FFFAF0"
                android:textSize="15dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.12">

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="#9F575C"
                android:text="Paylaşılanlar"
                android:textAllCaps="false"
                android:textColor="#fffcae"
                android:textSize="18dp"
                android:id="@+id/paylasilanBtn"/>

            <Button
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:background="#fffcae"
                android:text="Mesajlar"
                android:textAllCaps="false"
                android:textColor="#c55000"
                android:textSize="18dp"
                android:id="@+id/mesajlarBtn"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="378dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="380dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="#149385"
                android:text="Eğitimler"
                android:textAllCaps="false"
                android:textColor="#fffcae"
                android:textSize="18dp"
                android:id="@+id/egitimBtn"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/maps"
                android:gravity="top"
                android:text="Neredeyim?
                Konum"
                android:id="@+id/konumBtn"/>

            <Button
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="10dp"
                android:background="#8acfff"
                android:text="E-book"
                android:textAllCaps="false"
                android:textColor="#c55000"
                android:textSize="18dp"
                android:id="@+id/e-bookBtn"/>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>